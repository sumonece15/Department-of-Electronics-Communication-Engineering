<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    tools:context="com.tufayelahamed00ece.departmentofeletronicscommunicationengineering.ThirdSemester">


    <TextView
        android:id="@+id/textView3rd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="HI! I Am Third Semester"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:background="@color/colorPrimaryDark"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Books"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_margin="30dp"
        android:id="@+id/books3rd"
        android:textAllCaps="false"
        android:onClick="GoBooks3rd"


        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lab Question"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:textAlignment="center"
        android:layout_margin="30dp"
        android:id="@+id/lab3rd"
        android:textAllCaps="false"
        android:onClick="GoLabReport3"

        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Previous Year Questions"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:textAlignment="center"
        android:layout_margin="30dp"
        android:id="@+id/qus3rd"
        android:textAllCaps="false"
        android:onClick="GoQuestion3rd"
        />




</LinearLayout>
